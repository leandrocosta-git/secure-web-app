{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3ArtifactsWriteRead",
      "Effect": "Allow",
      "Action": ["s3:PutObject","s3:GetObject","s3:AbortMultipartUpload","s3:ListBucket"],
      "Resource": [
        "arn:aws:s3:::secure-webapp-artifacts-eu-west-1",
        "arn:aws:s3:::secure-webapp-artifacts-eu-west-1/*"
      ]
    },
    {
      "Sid": "DiscoverTargets",
      "Effect": "Allow",
      "Action": ["ec2:DescribeInstances","ec2:DescribeTags"],
      "Resource": "*"
    },
    {
      "Sid": "RunSsmCommands",
      "Effect": "Allow",
      "Action": ["ssm:SendCommand","ssm:GetCommandInvocation","ssm:ListCommandInvocations"],
      "Resource": "*",
      "Condition": { "StringEquals": { "aws:RequestedRegion": "eu-west-1" } }
    }
  ]
}